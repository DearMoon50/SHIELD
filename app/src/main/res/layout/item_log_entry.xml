<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/bg_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/glass_white_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewSeverityIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/status_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvLogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvLogTypeBadge"
                    android:text="File System Event"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLogTypeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/card_bg_premium"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="FILE"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvLogTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Jan 12, 12:45:00"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLogDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/glass_white_10"
                android:padding="12dp"
                android:text="Operation: MODIFY\nFile: /storage/emulated/0/doc.txt"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:fontFamily="serif" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
